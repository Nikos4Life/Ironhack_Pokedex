<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade" id="pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span id="pkmn-name">Feraligtr</span>
          <small id="pkmn-number">#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd id="pkmn-height">23</dd>

          <dt>Weight</dt>
          <dd id="pkmn-weight">888</dd>
          <dt>HP</dt>
          <dd id="pkmn-hp">888</dd>
          <dt>Attack & Defense</dt>
          <dd id="pkmn-atack-defense">888</dd>
          <dt>SP.Atk & SP.Def</dt>
          <dd id="pkmn-sp-atack-defense">888</dd>
          <dt>Speed</dt>
          <dd id="pkmn-spd">888</dd>
          <dt>Type</dt>
          <dd id="pkmn-type">888</dd>
        </dl>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
